{
  "name": "supercolliderjs",
  "description": "JavaScript library for the SuperCollider music language and synthesis server",
  "version": "0.14.2",
  "author": "Chris Sattinger <crucialfelix@gmail.com>",
  "contributors": [
    {
      "name": "Chris Sattinger",
      "email": "crucialfelix@gmail.com"
    }
  ],
  "dependencies": {
    "commander": "^2.9.0"
  },
  "devDependencies": {
    "@types/baconjs": "0.7.33",
    "@types/jest": "24.0.15",
    "@types/js-yaml": "3.12.1",
    "@types/lodash": "4.14.135",
    "@types/rx": "4.1.1",
    "@types/temp": "0.8.34",
    "@typescript-eslint/eslint-plugin": "1.11.0",
    "@typescript-eslint/parser": "1.11.0",
    "eslint": "6.0.1",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-prettier": "3.1.0",
    "jest": "^24.8.0",
    "lerna": "^3.15.0",
    "prettier": "1.18.2",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.2",
    "typescript": "3.5.2",
    "ncp": "^2.0.0"
  },
  "license": "MIT",
  "keywords": [
    "supercollider",
    "synthesis",
    "music",
    "sound",
    "creative-coding",
    "creative"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/crucialfelix/supercolliderjs"
  },
  "main": "lib/index",
  "types": "lib/index.d.ts",
  "files": [
    "/lib",
    "/src"
  ],
  "bin": {
    "supercollider-server": "./bin/scsynth.js",
    "supercollider": "./bin/sclang.js",
    "export-supercollider": "./bin/export-supercollider.js",
    "compile-synthdefs": "./bin/compile-synthdefs.js"
  },
  "scripts": {
    "postinstall": "npm run bootstrap && npm run build",
    "bootstrap": "lerna bootstrap --hoist",
    "build": "lerna exec -- tsc -b .",
    "test": "npm run jest && npm run lint",
    "jest": "lerna exec -- jest --rootDir=. --config=../jest.config.json --passWithNoTests",
    "lint": "eslint --ext .ts packages/",
    "clean": "lerna exec -- rimraf lib"
  },
  "eslintIgnore": [
    "node_modules",
    "lib"
  ],
  "engines": {
    "node": ">=10"
  }
}
